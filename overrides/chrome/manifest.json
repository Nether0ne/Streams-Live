{
  "short_name": "__MSG_extName__",
  "name": "__MSG_extName__",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["alarms", "background", "notifications", "storage", "unlimitedStorage"],
  "host_permissions": [
    "https://www.twitch.tv/*",
    "https://api2.goodgame.ru/oauth/receivecode*",
    "https://goodgame.ru/"
  ],
  "default_locale": "ru",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/icon-16.png",
      "32": "/icon/icon-32.png",
      "48": "/icon/icon-48.png",
      "128": "/icon/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/icon/icon-16.png",
    "32": "/icon/icon-32.png",
    "48": "/icon/icon-48.png",
    "128": "/icon/icon-128.png"
  }
}
