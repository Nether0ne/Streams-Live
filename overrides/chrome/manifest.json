{
  "short_name": "__MSG_extName__",
  "name": "__MSG_extName__",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["alarms", "background", "notifications", "storage", "unlimitedStorage"],
  "host_permissions": ["https://www.twitch.tv/*"],
  "default_locale": "en",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/16.png",
      "32": "/icon/32.png",
      "48": "/icon/48.png",
      "128": "/icon/128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/icon/16.png",
    "32": "/icon/32.png",
    "48": "/icon/48.png",
    "128": "/icon/128.png"
  }
}
