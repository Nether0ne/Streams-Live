{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "version": "1.0.0",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "unlimitedStorage",
    "*://*.twitch.tv/*",
    "*://*.api2.goodgame.ru/oauth/receivecode*",
    "*://*.goodgame.ru/",
    "*://*.wasd.tv/"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "/icon/icon-48.png",
    "96": "/icon/icon-96.png"
  },
  "browser_action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/icon/icon-16.png",
      "32": "/icon/icon-32.png"
    }
  },
  "commands": {
    "_execute_browser_action": {}
  }
}
