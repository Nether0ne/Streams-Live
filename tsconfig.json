{
  "compilerOptions": {
    "strict": true,
    "jsx": "preserve",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@api/*": ["api/*"],
      "@background/*": ["background/*"],
      "@cards/*": ["browser/components/cards/*"],
      "@common/*": ["common/*"],
      "@context/*": ["browser/common/context/*"],
      "@icons/*": ["browser/components/icons/*"],
      "@hooks/*": ["browser/common/hooks/*"],
      "@layout/*": ["browser/components/layout/*"],
      "@misc/*": ["browser/components/misc/*"],
      "@modals/*": ["browser/components/modals/*"],
      "@customTypes/*": ["common/types/*"],
      "@pages/*": ["browser/components/pages/*"],
      "@views/*": ["browser/views/*"]
    },
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  }
}
